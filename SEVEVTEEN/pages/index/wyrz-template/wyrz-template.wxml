<template name="wyrz">
<view class='addres' bindtap="showMap">
  <text class="addres-text">体育西路13号骏汇大厦2楼 体育西路G出口</text>
  <view class="addres-map">
    <text>地图</text>
    <image class="more-img" src='/imgs/index/right-arr.png'></image>
  </view>
</view>
<view class='date' bindtap="showDates">
  <image src='/imgs/index/rl.png'></image>
  <text class='date-cent'>{{time}}</text>
  <text class='date-right'>{{chooseDate.day?"入住"+chooseDate.day+"晚":"入住"}}</text>
  <image class="date-right-icon" src='/imgs/index/right-arr.png'></image>
</view>
<view class='info'>
  <view class='info-box'>
    <image class='info-box-icon' src='/imgs/room1.jpg'></image>
    <view class='info-box-text'>
      <view class='info-icon-top'>
        <image class='info-icon-top-img' src='/imgs/photo.png'></image>
        <text>4</text>
      </view>
    </view>
  </view>
  <view class='info-msg'>
    <text class='msg-big'>大床房</text>
    <text class='msg-smail'>大床2米,1.8米  部分内窗</text>
    <text class='msg-smail'>20-25m²</text>
  </view>
  <view class='money-text'>
    <text class='money-smail'>￥</text>
    <text>299</text>
    <text class='money-smail'>起</text>
  </view>
  <image class='right-icon' src='/imgs/index/top-arr.png'></image>
</view>
</template >