  flex-direction: row;
}

.coupon-container {
  display: flex;
  flex-direction: column;
}

.coupon-background {
  background-image: url(http://119.29.196.106:8080/seventeen/coupon.jpg);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 250rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}

.detail-container {
  display: flex;
  flex-direction: row;
}

.use {
  width: 600rpx;
  height: 50rpx;
  text-align: end;
  margin-top: 80rpx;
}

.use-img {
  margin-top: 87rpx;
  width: 50rpx;
  height: 30rpx;
}

.coupon-img {
