}

.money-container {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.date {
  margin-top: 35rpx;
  margin-right: 30rpx;
  float: right;
  color: #a0a0a0;
  font-size: 30rpx;
