  width: 200rpx;
}

.input {
  margin-left: 30rpx;
  width: 500rpx;
  height: 90rpx;
  background-color: white;
  border-radius: 5px;
}

.placeholder {
  font-size: 30rpx;
}

.button {
  margin-left: 38rpx;
  width: 150rpx;
  height: 90rpx;
  background-color: black;
  border-radius: 5px;
