.row-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  margin-bottom: 40rpx;
}

.input-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view-container {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #f0f0f0;
  width: 92%;
  height: 90rpx;
  margin: 20rpx auto 0;
}

.liver-title {
  margin-top: 20rpx;
  font-size: 30rpx;
  width: 120rpx;
  color: #696969;
}

.liver-name {
  font-size: 30rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
  background-color: #f0f0f0;
  width: 450rpx;
}

.button {
  background-color: white;
  width: 100%;
}

.wechat-img {
  height: 60rpx;
  width: 60rpx;
  margin-left: auto;
  position: absolute;
  margin-top: 13rpx;
}
.button-text{
  margin-left: 100rpx;
}

.wechat-text {
  font-size: 30rpx;
  display: block;
  margin-right: auto;
}

.add-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 40rpx;
  margin-top: 18rpx;
}

.nav-tabs {
  left: 0;
  bottom: 0;
  width: 100%;
  height: 85rpx;
  position: fixed;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
  border-top: 1px solid #707070;
}
