    <block wx:for="{{tabArray}}" wx:for-index="idx" wx:for-item="itemName">
      <view class="tab-list  {{currentTab == idx?'active':'default'}}" data-current="{{idx}}" catchtap="swichNav">
        <view class="{{currentTab == idx?'test':''}}">
          {{itemName}}
