page {
  background-color: #f2f2f2;
}

.border {
  border-left: 1px solid #797979;
  border-right: 1px solid #797979;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.subRZ {
  display: flex;
  height: 50px;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #ccc;
  color: #cda580;
  justify-content: center;
  align-items: center;
}

.id-box {
  height: 220px;
}

.rlsb {
  margin-top: 20px;
  height: 350px;
 
}

.tips {
  background: #fdefef;
  height: 120px;
  padding: 10px;
  font-size: 12px;
}

.operTitle {
  font-size: 16px;
  height: 30px;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  color: #434343;
}
.operType{
  flex: 1;
  color: #cda580;
}

.descTitle{
  display: flex;
  height: 40px;
  width: 90%;
  margin-left: 5%;
  font-size: 16px;
  justify-content: center;
  align-items: center;
  color: #666;
}
.title{
  flex: 1;
}
